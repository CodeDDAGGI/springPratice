<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.toyproject.todolist.repository.TodoMapper">


    <insert id="save" parameterType="com.toyproject.todolist.entity.Todos" >
        INSERT INTO todolist (content, date, status)
        VALUES (#{content}, #{date}, 0);
    </insert>

    <select id="todolist" resultType="com.toyproject.todolist.entity.Todos">
        select
            *
        from
            todolist
        where
            date = #{date}
    </select>

    <select id="getAllTodos" resultType="com.toyproject.todolist.entity.Todos">
        SELECT * FROM todolist
    </select>
</mapper>